{
  "include": [
    "lib/**/*.js"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],

    "noEmit": true,

    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 10,

    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "stripInternal": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "typeRoots": [
      "node_modules/bts-type-deps/types"
    ]
  }
}
